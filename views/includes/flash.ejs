<div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-md">
    <% if(success && success.length) { %>
        <div class="flash-message bg-green-500/20 backdrop-blur-md border border-green-400/30 text-green-400 px-4 py-3 rounded-lg shadow-lg" role="alert">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <%= success %>
                </div>
                <button type="button" class="close-flash" onclick="this.parentElement.remove()">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>

    <% if(error && error.length) { %>
        <div class="flash-message bg-red-500/20 backdrop-blur-md border border-red-400/30 text-red-400 px-4 py-3 rounded-lg shadow-lg" role="alert">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <%= error %>
                </div>
                <button type="button" class="close-flash" onclick="this.parentElement.remove()">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
        </div>
    <% } %>
</div>

<script>
    // Auto-dismiss flash messages after 5 seconds
    document.addEventListener('DOMContentLoaded', () => {
        const flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(message => {
            // Add fade-in animation
            message.style.animation = 'fadeIn 0.5s ease-in-out';
            
            // Set timeout for auto-dismiss
            setTimeout(() => {
                message.style.animation = 'fadeOut 0.5s ease-in-out';
                setTimeout(() => message.remove(), 500);
            }, 5000);
        });
    });
</script>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeOut {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(-20px); }
    }

    .flash-message {
        animation: fadeIn 0.5s ease-in-out;
    }
</style>