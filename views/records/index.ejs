<% layout('./layout/boilerplate') -%>

<div class="pt-20">
    <div class="glass-effect rounded-lg p-8 max-w-7xl mx-auto">
        <!-- Hero Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-nasa text-blue-400 mb-4">नामसिद्धि Dashboard</h1>
            <p class="text-gray-400">Advanced Police Records Management System</p>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
            <a href="/cases/new" class="glass-effect p-6 rounded-lg hover:border-green-400/50 transition-all group">
                <div class="flex items-center space-x-4">
                    <div class="p-3 rounded-full bg-green-500/20 group-hover:bg-green-500/30 transition-all">
                        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-nasa text-green-400">New Case</h3>
                        <p class="text-sm text-gray-400">Create a new case file</p>
                    </div>
                </div>
            </a>

            <a href="/newrecord" class="glass-effect p-6 rounded-lg hover:border-blue-400/50 transition-all group">
                <div class="flex items-center space-x-4">
                    <div class="p-3 rounded-full bg-blue-500/20 group-hover:bg-blue-500/30 transition-all">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-nasa text-blue-400">New Record</h3>
                        <p class="text-sm text-gray-400">Create a new case record</p>
                    </div>
                </div>
            </a>

            <a href="/search" class="glass-effect p-6 rounded-lg hover:border-blue-400/50 transition-all group">
                <div class="flex items-center space-x-4">
                    <div class="p-3 rounded-full bg-blue-500/20 group-hover:bg-blue-500/30 transition-all">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-nasa text-blue-400">Search</h3>
                        <p class="text-sm text-gray-400">Find existing records</p>
                    </div>
                </div>
            </a>

            <a href="/analytics" class="glass-effect p-6 rounded-lg hover:border-blue-400/50 transition-all group">
                <div class="flex items-center space-x-4">
                    <div class="p-3 rounded-full bg-blue-500/20 group-hover:bg-blue-500/30 transition-all">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-nasa text-blue-400">Analytics</h3>
                        <p class="text-sm text-gray-400">View insights and statistics</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Recent Records & Cases Section -->
        <div class="space-y-8">
            <!-- Recent Records Table -->
            <div class="glass-effect p-6 rounded-lg">
                <h2 class="text-2xl font-nasa text-blue-400 mb-6">Recent Records</h2>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="text-left border-b border-blue-400/20">
                                <th class="pb-3 font-nasa text-blue-400">ID</th>
                                <th class="pb-3 font-nasa text-blue-400">Name</th>
                                <th class="pb-3 font-nasa text-blue-400">Location</th>
                                <th class="pb-3 font-nasa text-blue-400">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-300">
                            <% if (recentRecords && recentRecords.length > 0) { %>
                                <% recentRecords.forEach(record => { %>
                                    <tr class="border-b border-blue-400/10 hover:bg-blue-400/5">
                                        <td class="py-3">#<%= record.id %></td>
                                        <td class="py-3">
                                            <%= record.firstNameEnglish %> <%= record.lastNameEnglish %>
                                            <span class="text-sm text-gray-500">
                                                (<%= record.firstNameHindi %> <%= record.lastNameHindi %>)
                                            </span>
                                        </td>
                                        <td class="py-3"><%= record.address.cityEnglish %></td>
                                        <td class="py-3">
                                            <div class="flex space-x-2">
                                                <a href="/record/<%= record.id %>" 
                                                   class="text-blue-400 hover:text-blue-300 transition-colors">View</a>
                                                <a href="/record/<%= record.id %>/edit" 
                                                   class="text-blue-400 hover:text-blue-300 transition-colors">Edit</a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="py-4 text-center text-gray-500">No records found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Recent Cases Table -->
            <div class="glass-effect p-6 rounded-lg">
                <h2 class="text-2xl font-nasa text-blue-400 mb-6">Recent Cases</h2>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="text-left border-b border-blue-400/20">
                                <th class="pb-3 font-nasa text-blue-400">Case #</th>
                                <th class="pb-3 font-nasa text-blue-400">Type</th>
                                <th class="pb-3 font-nasa text-blue-400">Status</th>
                                <th class="pb-3 font-nasa text-blue-400">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-300">
                            <% if (recentCases && recentCases.length > 0) { %>
                                <% recentCases.forEach(case_ => { %>
                                    <tr class="border-b border-blue-400/10 hover:bg-blue-400/5">
                                        <td class="py-3">#<%= case_.caseNumber %></td>
                                        <td class="py-3"><%= case_.caseType %></td>
                                        <td class="py-3">
                                            <span class="px-2 py-1 rounded-full text-xs
                                                <%= case_.status === 'active' ? 'bg-green-500/20 text-green-400' : 
                                                    case_.status === 'pending' ? 'bg-yellow-500/20 text-yellow-400' : 
                                                    'bg-red-500/20 text-red-400' %>">
                                                <%= case_.status %>
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            <div class="flex space-x-2">
                                                <a href="/cases/<%= case_._id %>" 
                                                   class="text-blue-400 hover:text-blue-300 transition-colors">View</a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="py-4 text-center text-gray-500">No cases found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Records -->
            <div class="glass-effect rounded-lg p-6  transition-all">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-blue-400">Total Records</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.totalRecords %></p>
                    </div>
                    <div class="text-blue-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Total profiles in database</p>
            </div>

            <!-- Total Cases -->
            <div class="glass-effect rounded-lg p-6  transition-all">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-green-400">Total Cases</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.totalCases %></p>
                    </div>
                    <div class="text-green-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Total cases registered</p>
            </div>

            <!-- Active Cases -->
            <div class="glass-effect rounded-lg p-6 transition-all">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-yellow-400">Active Cases</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.activeCases %></p>
                    </div>
                    <div class="text-yellow-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Currently active cases</p>
            </div>

            <!-- Pending Cases -->
            <div  class="glass-effect rounded-lg p-6  transition-all">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-red-400">Pending Cases</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.pendingCases %></p>
                    </div>
                    <div class="text-red-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Cases pending resolution</p>
            </div>
        </div>

        <!-- Additional Statistics -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Monthly Records -->
            <div class="glass-effect rounded-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-purple-400">Monthly Records</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.monthlyRecords %></p>
                    </div>
                    <div class="text-purple-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">New profiles this month</p>
            </div>

            <!-- Monthly Cases -->
            <div class="glass-effect rounded-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-indigo-400">Monthly Cases</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.monthlyCases %></p>
                    </div>
                    <div class="text-indigo-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">New cases this month</p>
            </div>

            <!-- Closed Cases -->
            <div class="glass-effect rounded-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-green-400">Closed Cases</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.closedCases %></p>
                    </div>
                    <div class="text-green-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Resolved cases</p>
            </div>

            <!-- Profiles with Aadhar -->
            <div class="glass-effect rounded-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-nasa text-blue-400">Verified Profiles</h3>
                        <p class="text-3xl font-bold text-white mt-2"><%= stats.profilesWithAadhar %></p>
                    </div>
                    <div class="text-blue-400">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                </div>
                <p class="text-gray-400 mt-2">Profiles with Aadhar verification</p>
            </div>
        </div>
    </div>
</div>